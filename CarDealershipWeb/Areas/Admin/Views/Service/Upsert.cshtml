@model Service

<form method="post">
	<input asp-for="Id" hidden />

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				@(Model.Id != 0 ? "Update" : "Create") Service
			</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.NameOfService" class="p-0"></label>
			<input asp-for="@Model.NameOfService" class="form-control" />
			<span asp-validation-for="@Model.NameOfService" class="text-danger"></span>
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="@Model.Price" class="p-0"></label>
			<input asp-for="@Model.Price" class="form-control" />
			<span asp-validation-for="@Model.Price" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Description" class="p-0"></label>
			<input asp-for="@Model.Description" class="form-control" />
			<span asp-validation-for="@Model.Description" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				@if (Model.Id != 0)
				{
					<button type="submit" class="btn btn-primary form-control">Update</button>
				}
				else
				{
					<button type="submit" class="btn btn-primary form-control">Create</button>
				}
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Service" asp-action="Index" class="btn btn-secondary border form-control">
					Back To List
				</a>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}